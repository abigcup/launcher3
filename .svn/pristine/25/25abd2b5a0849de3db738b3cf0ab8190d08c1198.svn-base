<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/whmatch"
    android:orientation="vertical">

    <LinearLayout style="@style/pop_update_content">

        <ImageView style="@style/pop_update_top_bg" />

        <LinearLayout style="@style/pop_update_bottom">

            <TextView
                android:id="@+id/pop_update_notice"
                style="@style/pop_update_notice" />

            <LinearLayout
                android:id="@+id/view_button"
                style="@style/pop_update_btn"
                android:visibility="visible">

                <TextView
                    android:id="@+id/pop_update_btn_open"
                    style="@style/pop_update_btn_soild"
                    android:text="@string/pop_update_btn_open" />

                <TextView
                    android:id="@+id/pop_update_btn_cancel"
                    style="@style/pop_update_btn_soild"
                    android:text="@string/pop_update_btn_cancel"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/pop_update_btn_update"
                    style="@style/pop_update_btn_blue"
                    android:text="@string/pop_update_btn_update" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_progress"
                style="@style/pop_update_progress"
                android:visibility="gone">

                <ProgressBar
                    android:id="@+id/progress_download"
                    style="@style/pop_update_progress_body"/>

                <TextView
                    style="@style/pop_update_progress_notice"
                    android:text="@string/pop_update_progress_notice" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>