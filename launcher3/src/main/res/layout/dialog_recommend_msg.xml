<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/whauto">
    <RelativeLayout
        android:id="@+id/notice_content"
        style="@style/notice_content"
        android:layout_alignParentBottom="false"
        android:layout_marginBottom="0dp">
        <ImageView
            android:id="@+id/notice_img"
            style="@style/notice_img"
            android:src="@drawable/ic_notice_gift"/>
        <TextView
            android:id="@+id/notice_text"
            style="@style/notice_text"
            android:text="@string/notice_text"/>
        <ImageView
            android:id="@+id/notice_close"
            style="@style/notice_close"/>
    </RelativeLayout>
</RelativeLayout>