<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/container"
        android:layout_centerInParent="true"
        style="@style/desktop_true">
        <!--paddingLeft设置无效，增加View来占位-->
        <View
            android:layout_width="@dimen/dp18"
            android:layout_height="1dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/desktop_true_add"
            style="@style/desktop_true_add"
            android:text="@string/desktop_true_add" />

        <TextView
            android:id="@+id/desktop_true_uninstall"
            style="@style/desktop_true_del"
            android:text="@string/desktop_true_del" />

        <TextView
            android:id="@+id/desktop_true_delete"
            style="@style/desktop_true_del"
            android:text="删除"
            android:visibility="gone" />

        <View
            android:layout_width="@dimen/dp18"
            android:layout_height="1dp"
            android:visibility="invisible" />
    </LinearLayout>
</RelativeLayout>